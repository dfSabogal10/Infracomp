<?xml version="1.0"?>

<!DOCTYPE web-app PUBLIC
   "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
   "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

   <description>Servlets Banco</description>

   <!-- SERVLETS -->

   <servlet>
      <servlet-name>Login</servlet-name>
      <servlet-class>interfaz.ServletLogin</servlet-class>
   </servlet>

  <servlet>
      <servlet-name>Usuario</servlet-name>
      <servlet-class>interfaz.ServletUsuario</servlet-class>
   </servlet>
   
   <servlet>
      <servlet-name>Oficina</servlet-name>
      <servlet-class>interfaz.ServletOficina</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>Prestamo</servlet-name>
      <servlet-class>interfaz.ServletPrestamo</servlet-class>
   </servlet>
   <!-- MAPPING -->
	
   <servlet-mapping>
      <servlet-name>Login</servlet-name>
      <url-pattern>/login.htm</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>Usuario</servlet-name>
      <url-pattern>/usuario.htm</url-pattern>
   </servlet-mapping>
   
    <servlet-mapping>
      <servlet-name>Oficina</servlet-name>
      <url-pattern>/oficina.htm</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>Prestamo</servlet-name>
      <url-pattern>/prestamo.htm</url-pattern>
   </servlet-mapping>

</web-app>
